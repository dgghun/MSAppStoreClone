<Window x:Class="MSAppStoreClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSAppStoreClone"
        xmlns:uc="clr-namespace:MSAppStoreClone.UserControls"
        xmlns:HamburgerMenuView="clr-namespace:MSAppStoreClone.UserControls.HamburgerMenuViews"
        mc:Ignorable="d"
        Name="MainWindowMetro"
        Title="MainWindow" Height="800" Width="1350">
    <Grid>
        <HamburgerMenuView:AllOwned> </HamburgerMenuView:AllOwned>
        <Frame Name="MainWindowFrame"
               Loaded="MainWindowFrame_Loaded"
               NavigationUIVisibility="Hidden"
               Width="{Binding ElementName=MainWindowMetro, Path=ActualWidth}"
               Height="{Binding ElementName=MainWindowMetro, Path=ActualHeight}"
               Visibility="Collapsed"
               >
        </Frame>
    </Grid>
</Window>
